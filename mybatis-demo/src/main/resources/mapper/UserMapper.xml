<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.binge.mybatis.dao.UserMapperDao">
    <sql id="BASE_TABLE">t_user</sql>

    <sql id="BASE_COLUMN">id, name</sql>

    <insert id="save" parameterType="com.binge.mybatis.model.User">
        INSERT INTO
        <include refid="BASE_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            id, name
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            #{id, jdbcType=VARCHAR},#{name, jdbcType=VARCHAR}
        </trim>
    </insert>

    <select id="allUsers" resultType="com.binge.mybatis.model.User">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
    </select>
</mapper>